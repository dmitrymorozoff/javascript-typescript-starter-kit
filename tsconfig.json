{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es5",
        "lib": [
            "es6",
            "dom",
            "dom.iterable",
            "scripthost",
            "esnext.asynciterable"
        ],
        "downlevelIteration": true,
        "strict": true,
        "types": [
            "node",
        ],
        "sourceMap": true,
        "allowJs": true,
        "allowUnreachableCode": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "noUnusedLocals": true,
        "baseUrl": "./source",
    },
    "exclude": [
        "node_modules"
    ],
    "compileOnSave": false
}
